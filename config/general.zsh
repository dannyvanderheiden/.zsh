# Aliases
##########

# Listing files
alias l='ls -halo'
alias ltr='ls -lt'
alias lth='l -t|head'
alias lh='ls -Shl | less'
alias tf='tail -f -n 100'

# VIM
alias m='mvim --remote-silent'

# Directories
alias downloads="cd $HOME/Downloads"

# Tmux in utf-8 mode
alias t="tmux -u"

# Colors in less
alias less='less -R'
